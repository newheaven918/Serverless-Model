      "Properties": {
        "Action": "lambda:InvokeFunction",
        "FunctionName": {
          "Ref": "MyAwesomeFunctionAliasLive"
        },
        "Principal": "sns.amazonaws.com",
        "SourceArn": {
          "Ref": "Notifications"
        }
      },
      "Type": "AWS::Lambda::Permission"
    },
    "MyAwesomeFunctionRole": {
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Statement": [
            {
              "Action": [
                "sts:AssumeRole"
              ],
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "lambda.amazonaws.com"
                ]
              }
            }
