    "MyAwesomeFunctionApiEventPermissionProd": {
      "Properties": {
        "Action": "lambda:InvokeFunction",
        "FunctionName": {
          "Ref": "MyAwesomeFunctionAliasLive"
        },
        "Principal": "apigateway.amazonaws.com",
